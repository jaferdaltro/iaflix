{{page-title "MovieNew"}}

<div class="container">
  <h1 class="text-center">Create Movie</h1>

  <form {{on "submit" this.onSubmit}}>
    <div class="form-group">
      <label for="title">Title</label>
      {{input type="text" id="title" value=this.title}}
    </div>

    <div class="form-group">
      <label for="genre">Genre</label>
      {{input type="text" id="genre" value=this.genre}}
    </div>

    <div class="form-group">
      <label for="release_date">Release Date</label>
      {{input type="date" id="releaseDate" value=this.releaseDate}}

    </div>
    <div class="form-group">
      <label for="runtime">Runtime(e.g., 30 min)</label>
      {{input type="text" id="runtime" value=this.runtime}}

    </div>

    <div class="form-group">
      <label for="parental_rating">Parental Rating</label>
      {{input type="text" id="parentalRating" value=this.parentalRating}}
    </div>

    <div class="text-center">
      <button type="submit" disabled={{this.disableSubmit}} class="btn btn-primary">Create Movie</button>
    </div>
  </form>
</div>